<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment"
    >

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.awkris.watchamovie.presentation.home.HomeFragment"
        android:label="MainActivity" >
        <action
            android:id="@+id/goto_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/goto_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.awkris.watchamovie.presentation.search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/search_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.awkris.watchamovie.presentation.moviedetail.MovieDetailFragment"
        android:label="MovieDetailFragment" >
        <action
            android:id="@+id/action_movieDetailFragment_self"
            app:destination="@id/movieDetailFragment" />
    </fragment>

</navigation>