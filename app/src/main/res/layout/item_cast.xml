<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/space_small"
    android:paddingVertical="@dimen/space_xsmall"
    >

    <ImageView
        android:id="@+id/img_cast"
        android:layout_width="@dimen/space_xxxxlarge"
        android:layout_height="@dimen/space_xxxxlarge"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txt_cast"
        android:layout_width="@dimen/space_xxxxlarge"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_small"
        android:textAlignment="center"
        android:textSize="@dimen/fontsize_xsmall"
        />

</LinearLayout>